<UserControl x:Class="EPI_Helper.EPI_View.Page.MainPage_Measurement_Tab1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EPI_Helper.EPI_View.Page"
             xmlns:tank="clr-namespace:Hellsys.Hell_Controls.Tank;assembly=Hellsys"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="250"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" >
            <Button Content="추가" MinWidth="70" Margin="0 0 0 5" Style="{StaticResource AccentButton}"/>
            <Button Content="삭제" MinWidth="70" Margin="0 0 0 5" Style="{StaticResource AccentButton}"/>
        </StackPanel>
        <!--상단패널-->
        <Grid Background="White" Grid.Row="1">
        </Grid>
        <GridSplitter Grid.Row="2" Height="3" Background="DarkGray" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
        <Grid Grid.Row="3">
            <DataGrid>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
